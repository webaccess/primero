<script>   
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();   
});

$(document).ready(function() {
	document.getElementById("validation_div").innerHTML= "";
    document.getElementById("submit_tag").addEventListener("click", function(event){
		document.getElementById("validation_div").innerHTML= "";
		var validation_content='';	
		var start_date = document.getElementById("start_date_field").value;
		var end_date = document.getElementById("end_date_field").value;
		if (start_date == "" || end_date == "")
		{
			if (start_date == "")
			{
				validation_content += '<label id = "start_date_validate1" style="color: red">please select start date</label>';
			}
			if (end_date == "")
			{
				validation_content += '<label id = "end_date_validate1" style="color: red">please select end date</label>'; 
			}
			if (start_date!= "" && end_date!= "")
			{
				if(new Date(start_date)> new Date(end_date))
				{
					validation_content += '<label id = "date_validation1" style="color: red">start date cannot be greater than end date</label>';
				}
				
			}

			event.preventDefault();
		}
		else if (start_date!= "" && end_date!= "")
		{
			if(new Date(start_date)> new Date(end_date))
			{
				validation_content += '<label id = "date_validation1" style="color: red">start date cannot be greater than end date</label>';
				event.preventDefault();
			}
			
		}
		document.getElementById("validation_div").innerHTML= validation_content;
	});

	$('#end_date_field').on('change', function() {
		var end_date = document.getElementById("end_date_field").value;
		var start_date = document.getElementById("start_date_field").value;
		if (end_date!="")
		  {
		var element_exist =  document.getElementById('end_date_validate1');
		if (typeof(element_exist) != 'undefined' && element_exist != null)
		  {
			document.getElementById("end_date_validate1").innerHTML = ""; 
		  }
		}
		if (start_date!= "" && end_date!= "")
		  {
			if(new Date(start_date)<= new Date(end_date))
			  {
				var element_exist =  document.getElementById('date_validation1');
				if (typeof(element_exist) != 'undefined' && element_exist != null)
				  {
					document.getElementById("date_validation1").innerHTML = "";
				  }
			  }
			
		  }
		
	  });
	  
	  $('#start_date_field').on('change', function() {
		var start_date = document.getElementById("start_date_field").value;
		var end_date = document.getElementById("end_date_field").value;
		if (start_date!="")
		  {
			var element_exist =  document.getElementById('start_date_validate1');
			if (typeof(element_exist) != 'undefined' && element_exist != null)
				{
					document.getElementById("start_date_validate1").innerHTML = "";  
				}
		  }
		if (start_date!= "" && end_date!= "")
		  {
			if(new Date(start_date)<= new Date(end_date))
			  {
				var element_exist =  document.getElementById('date_validation1');
				if (typeof(element_exist) != 'undefined' && element_exist != null)
				  {
					document.getElementById("date_validation1").innerHTML = "";
				  }
			  }
			
		  }
	  });

});

</script>

<div class="container">
	<div class="row">
		<%= form_tag("/all_reports/status_of_psychosocial/submit_form", class: "form-inline" ,method: "post", class: 'form-inline', name:"myForm", id:"submit_form_for_status_of_psychosocial") do %>
		<div class="title-sub-report">
			<h3>Progress on Psychosocial Needs</h3>
		<div>
		<div class="sub-report-filter">
			<div id = "validation_div"></div>
			<div class="col-sm-3">
				<label>Start Date</label>
				<%= date_field_tag(:start_date, Date.today, :id => 'start_date_field', :max => Date.today, :required => true)%>
			</div>
			<div class="col-sm-3">
				<label>End Date</label>
				<%= date_field_tag(:end_date, Date.today, :id => 'end_date_field', :max => Date.today, :required => true)%>
			</div>
			<div class="col-sm-3">
					<button type="submit" id ='submit_tag'>Submit</button>
					<div class="excel-sheet">
						<a id="generate" class="fa fa-file-excel-o" style ="font-size:30px;align:right" data-toggle="tooltip" title="Download excel" data-placement="bottom" target = "_blank"></a>
					</div>
				</div>
		<% end %>
		</div>
		<div style="margin-top: 5%; overflow-x: auto; overflow-y: auto;"  id="report">
			<table class="dataTable in_content_area reports">
				<thead>
					<tr hidden>
						<td colspan = 10 align = "center"><h4><b>Progress on Psychosocial Needs</b></h4></td>
					</tr>
					<tr hidden>
						<td>Start Date: <%= @start_date %></td>
					</tr>
					<tr hidden>
						<td>End Date: <%= @end_date %></td>
					</tr>
					<tr hidden>
						<td></td>
					</tr>
					<tr>
						<td rowspan="2">Type of Needs</td>
						<td rowspan="2">No. of cases</td>
						<td rowspan="2">Assessment made</td>
						<td rowspan="2">No Need Assessment Done</td>
						<td rowspan="2">No Need Identified</td>
						<td rowspan="2">Need Re-Occurred</td>
						<td rowspan="2">Need identified</td>
						<td colspan="2">Need Fulfilled</td>
						<td rowspan="2">Could not be met</td>
						<td rowspan="2">Efforts ongoing</td>
						<td rowspan="2">Total</td>
					</tr>
					<tr>	
						<td>Fully Met</td>
						<td>Partially</td>
					</tr>
				</thead>
                <tbody>
                <% @data.each_with_index do |i,index|%>
                    <tr>
                        <td><%= i['need'] %></td>
						<!--
                        <% if index == 0 %>		
                            <td rowspan = 7> <%= i['total_cases'] %> </td>
                        <% else %>
                            <% if index == 7 %>	
                                 <td> <%= i['total_cases'] %> </td>
                            <% end %>
                        <% end %>
						//-->
						<td><%= i['total_cases'] %></td>
                        <td><%= i['assessment_made'] %></td>
                        <td><%= i['no_need_assessment_done']%></td>
                        <td><%= i['no_need_identified']%></td>
                        <td><%= i['need_re_occured'] %></td>
                        <td><%= i['need_identified'] %></td>
                        <td><%= i['need_fulfilled_fully_met'] %></td>
                        <td><%= i['need_fulfilled_partially_met'] %></td>
                        <td><%= i['could_not_be_met'] %></td>
                        <td><%= i['efforts_ongoing'] %></td>
                        <td><%= i['total'] %></td>
                    </tr>
                <% end %>
				</tbody>	
			</table>
		</div>
	</div>
</div>
<script>
document.getElementById("start_date_field").defaultValue = "<%= @start_date %>";
document.getElementById("end_date_field").defaultValue = "<%=@end_date %>";
document.getElementById("generate").addEventListener("click", function () {
	createDownloadLink("#generate",generateExcel($("#report")),"status_of_psychosocial_report.xlsx");
  });
  
  function generateExcel(el) {
		var clon = el.clone();
		var html = clon.wrap('<div>').parent().html();

		//add more symbols if needed...
		while (html.indexOf('á') != -1) html = html.replace(/á/g, '&aacute;');
		while (html.indexOf('é') != -1) html = html.replace(/é/g, '&eacute;');
		while (html.indexOf('í') != -1) html = html.replace(/í/g, '&iacute;');
		while (html.indexOf('ó') != -1) html = html.replace(/ó/g, '&oacute;');
		while (html.indexOf('ú') != -1) html = html.replace(/ú/g, '&uacute;');
		while (html.indexOf('º') != -1) html = html.replace(/º/g, '&ordm;');
		html = html.replace(/<td>/g, "<td>");			
		
		return html;
	}
	
	function createDownloadLink(anchorSelector, str, fileName){			
			var url = "data:application/vnd.ms-excel," + encodeURIComponent(str);
			$(anchorSelector).attr("download", fileName);               
			$(anchorSelector).attr("href", url);
			
		}


</script>
